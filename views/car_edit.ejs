<%- include('_partials/head') %>
    <%- include('_partials/navbar') %>
    <div class="container">
        <h1 class='mt-5'>Edit Car</h1>

        <form action="/car/edit/<%= data.id %>" method="POST" enctype="multipart/form-data">

            <div class="form-group">
              <label for="type">Car Type</label>
              <input type="text" class="form-control" id="type" name="type" value="<%= data.type %>"/>
            </div>

            <div class="form-group">
              <label for="detail">Details</label>
              <input type="text" class="form-control" id="detail" name="detail" value="<%= data.detail %>">
            </div>

            <div class="form-group">
              <label for="price">Price</label>
              <input type="number" class="form-control" id="price" name="price" value="<%= data.price %>">
            </div>

            <div class="form-group">
              <label>Image</label>
              <div class="custom-file">
                <input type="file" id="image" name="image" value="<%= data.image %>">
              </div>
            </div>

            <div class="form-group">
              <label for="AdminId">Owner</label>
              <select class="form-control" id="AdminId" name="AdminId" disabled>
                <option selected><%=data.Admin.full_name%></option>
              </select>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
    </div>
    <%- include('_partials/script') %>