<%- include('_partials/head') %>
    <%- include('_partials/navbar') %>
    <div class="container">
        <h1 class='mt-5'>Car Detail</h1>
        <div class="card">
			<div class="container-fliud">
				<div class="wrapper row">
					<div class="preview col-md-6">
						
						<div class="preview-pic tab-content">
						  <div class="tab-pane active" id="pic-1">
                            <%let word=''; for(let i = 0; i < 4; i++) {word+=data.image[i]} %>
                              <img src="<%= word==='http' ? data.image : `/img/${data.image}`%>" class="img-thumbnail"/>
                            </div>
						</div>
						
					</div>
					<div class="details col-md-6">
						<h3 class="product-title text-capitalize"><%= data.type %></h3>
						<p class="product-description text-capitalize"><%=data.detail%>.</p>
                        <dl>
                            <dt>Price (per Day)</dt>
                            <dd><%= data.price %></dd>
                            <dt>Owner</dt>
                            <dd><%= data.Admin.full_name %></dd>
                            <%if(data.UserId){%>
                                <dt>Penyewa</dt>
                                <dd><%= data.User.getFullName() %></dd>
                                <%}%>
                        </dl>
					</div>
				</div>
                </div>
    </div>
    <%- include('_partials/script') %>